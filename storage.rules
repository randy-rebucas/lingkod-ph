
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Default to allowing public read access for all files.
    // This allows anyone to view images like profile pictures, service images, etc.
    match /{allPaths=**} {
      allow read;
    }

    // --- WRITE RULES ---

    // Allow authenticated users to write to their own profile picture folder.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow providers to upload to their own documents folder.
    match /provider-documents/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload to the chat images folder.
    // The path contains the conversation ID, which both participants have access to.
    match /chat-images/{conversationId}/{allPaths=**} {
        allow write: if request.auth != null;
    }

    // Allow authenticated users to upload booking completion photos.
    match /completion-photos/{bookingId}/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Allow authenticated users (admins, through app logic) to write to the logo path.
    match /platform/logo/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    // Allow admins to write to the ad campaign images path.
    match /ad-campaign-images/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
