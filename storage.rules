
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own folders within specific paths
    match /profile-pictures/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /completion-photos/{bookingId}/{fileName} {
      allow write: if request.auth != null;
    }
    
    match /work-log-photos/{bookingId}/{fileName} {
      allow write: if request.auth != null;
    }
    
    match /chat-images/{conversationId}/{fileName} {
        allow write: if request.auth != null;
    }

    match /verification/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /provider-documents/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
