rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to user profile pictures
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to upload verification documents to their own folder
    match /verification/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to upload completion photos to a booking-specific folder
    // The client should only be able to upload to a folder they are a part of (either client or provider)
    // For simplicity here, we'll allow any authenticated user to write.
    // In a production app, you would add more granular checks.
    match /completion-photos/{bookingId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to upload chat images
    match /chat-images/{conversationId}/{allPaths=**} {
        allow read, write: if request.auth != null;
    }

    // Allow providers to upload documents
    match /provider-documents/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
