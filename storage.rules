
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for profile pictures, but only allow users to write their own.
    match /profile-pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write only within their own documents folder.
    match /provider-documents/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write chat images.
    // For production, you might want to restrict this further to only participants of the conversation.
    match /chat-images/{conversationId}/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Allow authenticated users to upload verification documents to their own folder.
    match /verification/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
        // Read access should typically be restricted to admins/backend processes.
    }
  }
}
