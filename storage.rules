rules_version = '2';

// Docs: https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }

    // --- Profile Pictures ---
    // Allow authenticated users to write to their own profile picture folder
    match /profile-pictures/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Completion Photos ---
    // Allow authenticated users to write to booking-specific completion photo folders
    match /completion-photos/{bookingId}/{fileName} {
        allow write: if request.auth != null;
    }
    
    // --- Verification Documents ---
    // Allow authenticated users to write to their own verification folder
    match /verification/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Provider Documents (Resume, Portfolio) ---
    match /provider-documents/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

     // --- Chat Images ---
    match /chat-images/{conversationId}/{fileName} {
        allow write: if request.auth != null;
    }
  }
}
