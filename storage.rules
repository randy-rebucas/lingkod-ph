
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for most files, especially profile pictures
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to specific paths
    // This allows users to upload their own profile pictures and documents
    match /profile-pictures/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /provider-documents/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /completion-photos/{bookingId}/{fileName} {
        allow write: if request.auth != null;
    }
    match /chat-images/{conversationId}/{fileName} {
        allow write: if request.auth != null;
    }
  }
}
