# Localpro PH Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# =============================================================================
# FIREBASE CONFIGURATION
# =============================================================================
# Get these from Firebase Console > Project Settings > Service Accounts
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================

# Maya Checkout Configuration
# Get these from Maya Business Manager > API Keys
NEXT_PUBLIC_MAYA_PUBLIC_KEY=pk-test-your-maya-public-key
MAYA_SECRET_KEY=sk-test-your-maya-secret-key
MAYA_WEBHOOK_SECRET=your-maya-webhook-secret
MAYA_ENVIRONMENT=sandbox

# PayPal Configuration
# Get these from PayPal Developer Dashboard > My Apps & Credentials
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_CERT_ID=your-paypal-webhook-cert-id

# =============================================================================
# EMAIL SERVICE
# =============================================================================
# Get this from Resend Dashboard > API Keys
RESEND_API_KEY=re_your_resend_api_key

# =============================================================================
# BANK TRANSFER CONFIGURATION
# =============================================================================
BANK_ACCOUNT_NAME=Your Company Name
BANK_ACCOUNT_NUMBER=1234567890
BANK_NAME=Your Bank Name

# =============================================================================
# SECURITY (Auto-generated - do not change)
# =============================================================================
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable debug logging
DEBUG_PAYMENTS=true
DEBUG_WEBHOOKS=true
